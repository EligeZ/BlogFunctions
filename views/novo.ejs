<%- include("partials/header.ejs") %>

    <body>
        <div class="container">
            <h1>
                <%= post ? 'Editar Postagem' : 'Nova Postagem' %>
            </h1>
            <% if (locals.error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>
                    <form action="/salvar" method="POST">
                        <% if (post) { %>
                            <input type="hidden" name="id" value="<%= post.id %>">
                            <% } %>
                                <div class="mb-3">
                                    <label for="tituloInput" class="form-label">Título da Matéria</label>
                                    <input type="text" class="form-control" id="tituloInput" name="titulo"
                                        placeholder="Digite o título da sua matéria"
                                        value="<%= post ? post.titulo : '' %>">
                                </div>
                                <div class="mb-3">
                                    <label for="nomeInput" class="form-label">Nome do Autor</label>
                                    <input type="text" class="form-control" id="nomeInput" name="nome"
                                        placeholder="Digite seu nome aqui" value="<%= post ? post.nome : '' %>">
                                </div>

                                <div class="mb-3">
                                    <label for="textoInput" class="form-label">Texto do blog</label>
                                    <textarea class="form-control" id="textoInput" name="texto"
                                        rows="5"><%= post ? post.texto : '' %></textarea>
                                </div>

                                <div class="buttons-container">
                                    <button type="submit" class="btn btn-primary btn-lg corBotao">Salvar</button>
                                </div>
                    </form>
        </div>
    </body>

